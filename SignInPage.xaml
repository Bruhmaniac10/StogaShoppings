<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StogaShopping.SignInPage"
             Title="SignInPage">
    <StackLayout>
        <Label Text="Sign In" FontSize="Large" HorizontalOptions="CenterAndExpand" Margin="0,20,0,10" />

        <Label x:Name="UsernameLabel" Text="Name:" />
        <Entry x:Name="usernameEntry" Placeholder="Enter your username" />

        <Label x:Name="PasswordLabel" Text="Passowrd:" />
        <Entry x:Name="passwordEntry" Placeholder="Enter your Passoword" />

        <Button Text="Sign In" Clicked="OnSignInClicked" HorizontalOptions="CenterAndExpand" Margin="0,20,0,0" />

        <Button Text="Create Account Instead" Clicked="OnCreateAccountClicked" HorizontalOptions="CenterAndExpand" Margin="0,20,0,10" />
    </StackLayout>
</ContentPage>
