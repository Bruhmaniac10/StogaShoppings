<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StogaShopping.Product"
             Title="Product">
    <VerticalStackLayout>
        <Label 
    <StackLayout Margin="20">
        <!-- Product Image -->
        <Image Source="{Binding Product.Images}" HeightRequest="200" Aspect="AspectFit" />

        <!-- Product Name -->
        <Label Text="{Binding Product.Name}" FontSize="24" FontAttributes="Bold" Margin="0,10,0,5" />

        <!-- Product Seller -->
        <Label Text="{Binding Product.Seller}" FontSize="18" Margin="0,0,0,5" />

        <!-- Product Price -->
        <Label Text="{Binding Product.Price, StringFormat='Price: {0:C}'}" FontSize="20" TextColor="Green" Margin="0,0,0,10" />

        <!-- Product Description -->
        <Label Text="Description" FontSize="20" FontAttributes="Bold" />
        <Label Text="{Binding Product.Description}" FontSize="16" Margin="0,0,0,10" />

        <!-- Product Features -->
        <Label Text="Features" FontSize="20" FontAttributes="Bold" />
        <Label Text="{Binding Product.Features}" FontSize="16" Margin="0,0,0,10" />

    </VerticalStackLayout>
</ContentPage>
